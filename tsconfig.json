{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@database/*": ["src/database/*"],
      "@config": ["src/config"],
      "@helpers": ["src/helpers"],
      "@modules/*": ["src/modules/*"],
      "@admin/*": ["src/modules/admin/*"],
      "@auth": ["src/modules/auth/"],
      "@user": ["src/modules/user/*"],
      "@libs/*": ["src/libs/*"]
    },
    "incremental": true
  }
}
